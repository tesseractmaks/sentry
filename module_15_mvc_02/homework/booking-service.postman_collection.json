							"                            \"required\": [",
							"                                \"roomId\",",
							"                                \"floor\",",
							"                                \"guestNum\",",
							"                                \"beds\",",
							"                                \"price\"",
							"                            ],",
							"                            \"properties\": {",
							"                                \"roomId\": {",
							"                                    \"type\": \"integer\"",
							"                                },",
							"                                \"floor\": {",
							"                                    \"type\": \"integer\"",
							"                                },",
							"                                \"guesttNum\": {",
